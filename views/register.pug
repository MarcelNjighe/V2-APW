doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      body {font-family: Arial, Helvetica, sans-serif;}
      input[type=text], input[type=password] {
      width: 15%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid black;
      box-sizing: border-box;
      }
      input[type=text], input[type=name] {
      width: 15%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid black;
      box-sizing: border-box;
      }
      input[type=text], input[type=email] {
      width: 15%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid black;
      box-sizing: border-box;
      }
      button {
      background-color: #4CAF50;
      color: White;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      cursor: pointer;
      width: 10%;
      }
      button:hover {
      opacity: 0.7;
      }
      }
.row.mt-5
  .col-md-6.m-auto
    .card.card-body
      h1.text-center.mb-4
        i.fas.fa-user-plus
        |  Register
      form(action='/users/register' method='POST')
        .form-group
          input#name.form-control(type='name' name='name' placeholder='Enter Name' value= '')
        .form-group
          input#email.form-control(type='email' name='email' placeholder='Enter Email' value='' )
        .form-group
          input#password.form-control(type='password' name='password' placeholder='Create Password' value='')
        button.btn.btn-block(type='submit')
          | Register
      p.lead.mt-2.text-center
        | Have An Account ? 
        a(href='/users/login') Login
        |  | 
        a(href='/') Home